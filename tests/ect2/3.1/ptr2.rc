function : int main(){
   const auto c = 015;
   int [c] a;
   auto i = -1; while (++i < c){
      a[i] = i * 036;
      cout << a[i] << " ";
   } cout << endl;

   auto it = &a[c/2];
   i = -1; while (++i <= c/2){
      cout << it[i] << " ";
      cout << it[-i] << " ";
   } cout << endl;

   return 0;
}
